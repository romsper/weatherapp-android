<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_weather_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/weather"
        android:textColor="#000000"
        android:visibility="invisible"
        android:background="@drawable/padding_horizontal_16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/padding_horizontal_16dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:focusable="true"
        android:text="City:"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <com.iammert.library.ui.multisearchviewlib.MultiSearchView
        android:id="@+id/multiSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:searchTextStyle="@style/SearchTextStyle" />

    <LinearLayout
        android:id="@+id/weather_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:weightSum="3">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <fragment
            android:id="@+id/weather_fragment"
            android:name="com.romsper.weatherapp.fragment.WeatherFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>